/* pages/home/home.wxss */
@import '../../iconfont/iconfont.wxss';
.page-section-spacing{
  margin-top: 60rpx;
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 100%;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 100%;
}

image{
  height: 100%;
  width: 100%;
}
view{
  background: none;
}
.tarBar{
  background: #fff;
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}
.tarBar icon{
  color:yellowgreen;
  display: block;
  text-align: center;
  font-size: 20rpx;
}
.tarBar text{
  font-size: 24rpx;
  color: #666666;
}

.list{
  background: lightgray;
  padding: 20rpx;
}
.list-item{
  background: #fff;
  /* width:100%; */
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.list-item image{
  width: 80rpx;
  height: 80rpx;
  margin-top:25rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.list-item>.top{
  display: flex;
}
.nameInfo{
  font-size: 25rpx;
  color: #666666;
  margin-bottom: 10rpx;
}
.nameInfo icon{
  font-size: 25rpx;
  margin-left: 20rpx;
  color: red;
}
.time{
  font-size: 25rpx;
  color: #666666;
}
.desc{
  margin-top:20rpx;
}
.desc>view text{
  font-size: 18rpx;
  color: #888888;
}
.desc image{
  width:120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.footer{
  display: flex;
  justify-content: space-between;
}
.footer icon{
  font-size: 18rpx;
  margin-right: 10rpx;
}
.right{
  display: flex;
}
.right>view:first-child{
  margin-right: 30rpx;
}
.right>view:last-child{
  margin-right: 20rpx;
}

