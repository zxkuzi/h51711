/* miniprogram/pages/fb/fb.wxss */
page{
  /* background-color: rgba(200, 198, 201, 0.527); */
}
.pages{
  width: 98%;
  margin: auto;
  overflow: hidden;
}
.top{
  width: 100%;
  overflow: hidden;
  margin: auto;
  font-size: 50rpx;
  background-color: white;
  border-left: 8rpx solid rgb(9, 245, 60);
  border-bottom: 1rpx solid rgba(117, 116, 116, 0.527);
}
.top_name{
  margin-left: 20rpx;
}
/* 图片 */
.images_box{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
}
.img-box{
  border: 5rpx;
  width: 200rpx;
  height: 200rpx;
  margin-left: 35rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.img-delect>icon{
  color: #5c6466;
  font-size: 40rpx;
}
.img-box>.imgadd{
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  margin-left: 50%;
  margin-top: 50%;
  transform: translate(-50%,-50%);
  /* margin: 0 auto;
   */
}
/* 删除图片 */
.img-delect{
  width:50rpx;
  height:50rpx;
  border-radius:50%;
  position:absolute;
  right: 0;
  top: 0;
}
.img{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  border: 1px solid #bab9be;
}
.close{
  border:none
}
.jiage{
  height: 60rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  background-color: white;
  display: flex;
  justify-content: flex-start;
}
.rmb{
  width: 280rpx;
  border: 2rpx solid rgb(199, 197, 197);
}
button{
  margin-top: 20rpx;
  background-color: green;
}
.radio-group{
  display: flex;
}
.header{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ededed;
  padding-bottom: 20rpx;
}
.header{
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.header>image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
}
textarea{
  color: #b9b9b9;
}
.textPlaceholder{
  color: #b9b9b9;
}
.publishStatus{
  height: 30rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  width: 150rpx;
  border-radius: 40rpx;
  background: #4adcd1;
  color: #fff;
}


